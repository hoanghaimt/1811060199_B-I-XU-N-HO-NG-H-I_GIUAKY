
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thể loại tin tức</h2>
 <table border="1">
     <tr>
         <th>
             ID
         </th>
         <th>
             Tên Thể Loại
         </th>
         <th></th>
     </tr>
     @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Maloai
                    </td>
                    <td>
                        @item.Tentheloai
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.Maloai }) |
                        @Html.ActionLink("Chi Tiết", "Details", new { id = item.Maloai }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.Maloai }) 
                    </td>
                </tr>
            }
 </table>
